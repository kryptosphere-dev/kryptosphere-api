# MongoDB Configuration
# Option 1: Use complete MongoDB URI (recommended for Vercel)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/dbname?retryWrites=true&w=majority

# Option 2: Use separate MongoDB credentials (if not using MONGODB_URI)
# MONGODB_USER=your_mongodb_username
# MONGODB_PWD=your_mongodb_password
# MONGODB_DB=your_database_name

# Setup Security
# Generate a strong secret token: openssl rand -hex 32
# This token is required to create the root user via /api/setup
SETUP_SECRET=your_secret_setup_token_here

# Server Port (only needed for local development with Express)
# Not used in Vercel serverless functions
PORT=3000
